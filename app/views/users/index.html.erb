<%= stylesheet_link_tag 'admin', media: 'all' %>

<div class="admin-container">
  <div class="admin-header">
    <h1>👥 ユーザー管理</h1>
    <%= link_to "← 戻る", root_path, class: "btn btn-secondary" %>
  </div>

  <div class="admin-stats">
    <div class="stat-card">
      <h3>総ユーザー数</h3>
      <p class="stat-number"><%= @users.count %></p>
    </div>
    <div class="stat-card">
      <h3>管理者</h3>
      <p class="stat-number"><%= @users.where(admin: true).count %></p>
    </div>
    <div class="stat-card">
      <h3>一般ユーザー</h3>
      <p class="stat-number"><%= @users.where(admin: [false, nil]).count %></p>
    </div>
  </div>

  <div class="admin-table-container">
    <table class="admin-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>ユーザーネーム</th>
          <th>メールアドレス</th>
          <th>権限</th>
          <th>登録日</th>
          <th>日記数</th>
          <th>アクション</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.display_name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.admin? %>
                <span class="badge badge-admin">管理者</span>
              <% else %>
                <span class="badge badge-user">一般</span>
              <% end %>
            </td>
            <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= user.journals.count %></td>
            <td class="action-buttons">
              <%= link_to "詳細", user_path(user), class: "btn btn-sm btn-info" %>
              <% unless user == current_user %>
                <%= button_to "削除", user_path(user),
                    method: :delete,
                    data: { confirm: "#{user.display_name} を削除しますか?\nこのユーザーの全ての日記も削除されます。" },
                    class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
